<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Code" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your theme colors -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@android:color/black</item>

        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>

        <!-- Default button style -->
        <item name="materialButtonStyle">@style/Widget.Material3.Button</item>
    </style>

    <style name="Theme.Code" parent="Base.Theme.Code" />

    <!-- Correct -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/my_purple</item>
    </style>



</resources>