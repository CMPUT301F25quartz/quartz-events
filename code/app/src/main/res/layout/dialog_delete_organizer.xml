<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/dialog_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Confirmation"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#1F2937"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you sure you want to remove organizer &quot;Emily Chen&quot;?"
        android:textSize="16sp"
        android:textColor="#4B5563"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This will:"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#1F2937"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="• Deactivate their account"
        android:textSize="14sp"
        android:textColor="#4B5563"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="• Flag all associated events"
        android:textSize="14sp"
        android:textColor="#4B5563"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="• Prevent future event creation"
        android:textSize="14sp"
        android:textColor="#4B5563"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This action cannot be undone."
        android:textSize="14sp"
        android:textStyle="italic"
        android:textColor="#DC2626"
        android:layout_marginBottom="24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:background="@drawable/button_cancel"
            app:backgroundTint="@null"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="#4B5563"
            android:textColorLink="#F6F3F3" />

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_delete"
            app:backgroundTint="@null"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:textAllCaps="false" />

    </LinearLayout>

</LinearLayout>