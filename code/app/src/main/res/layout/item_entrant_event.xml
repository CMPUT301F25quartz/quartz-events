<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:strokeColor="#E0E0E0"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Event Poster Image (rounded corners via ShapeableImageView) -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivEventPoster"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="Event poster image"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.MaterialComponents.SmallComponent"
            app:strokeColor="#E0E0E0"
            app:strokeWidth="1dp"
            tools:src="@drawable/jazz" />

        <!-- Event Title -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvEventTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivEventPoster"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Jazz Night Event" />

        <!-- Event Date -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvEventDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="#666666"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivEventPoster"
            app:layout_constraintTop_toBottomOf="@id/tvEventTitle"
            tools:text="Dec 15, 2023, 7:00 PM" />

        <!-- Event Status (Registration Open/Closed) -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvEventStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="#17C172"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivEventPoster"
            app:layout_constraintTop_toBottomOf="@id/tvEventDate"
            tools:text="Registration Open" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>