<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Event poster image -->
        <ImageView
            android:id="@+id/iv_event_poster"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:scaleType="centerCrop"
            android:background="@drawable/image_placeholder_background"
            android:contentDescription="@string/event_poster" />

        <ImageView
            android:id="@+id/iv_flag_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_flag_red"
            android:visibility="gone"
            android:contentDescription="Flagged Event"

            android:layout_alignTop="@id/iv_event_poster"
            android:layout_alignStart="@id/iv_event_poster"

            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"

            android:background="@drawable/circle_background"
            android:padding="4dp"

            android:elevation="6dp"
            />

        <!-- Event details container -->
        <LinearLayout
            android:id="@+id/layout_event_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iv_event_poster"
            android:layout_toStartOf="@id/btn_delete"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:orientation="vertical">

            <!-- Event date -->
            <TextView
                android:id="@+id/tv_event_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_12_nov_sat_6_00_pm"
                android:textSize="12sp"
                android:textColor="@color/blue"
                android:textStyle="bold" />

            <!-- Event title -->
            <TextView
                android:id="@+id/tv_event_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/a_virtual_evening_of_smooth_jazz"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Event location (if available) -->
            <LinearLayout
                android:id="@+id/layout_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_location"
                    app:tint="@color/gray" />

                <TextView
                    android:id="@+id/tv_event_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="@string/location"
                    android:textSize="12sp"
                    android:textColor="@color/gray" />
            </LinearLayout>
        </LinearLayout>

        <!-- Delete button -->
        <ImageButton
            android:id="@+id/btn_delete"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"

            android:background="@drawable/bg_circle_light_red"
            android:src="@drawable/ic_delete_standard"
            app:tint="#D32F2F"
            android:padding="12dp"
            android:scaleType="fitCenter"

            android:contentDescription="@string/delete_event"
            android:layout_marginEnd="4dp"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>