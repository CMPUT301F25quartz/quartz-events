<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ui.events.EventDetailsFragment">

    <!-- Back Button (top-left) -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Go back to events list"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#1976D2" />

    <!-- Scrollable Content Area -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="72dp"
        android:layout_marginBottom="120dp"
        app:layout_constraintBottom_toTopOf="@id/buttonContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Event Poster Image -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivEventPoster"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:contentDescription="Event poster image"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.MaterialComponents.MediumComponent"
                tools:src="@drawable/jazz" />

            <!-- Event Title -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvEventTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textAppearance="?attr/textAppearanceHeadline5"
                android:textColor="#000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivEventPoster"
                tools:text="Jazz Night Event" />

            <!-- Event Description -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvEventDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textColor="#333333"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvEventTitle"
                tools:text="Enjoy an evening of live jazz music with local artists." />

            <!-- Event Date -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvEventDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="#666666"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvEventDescription"
                tools:text="December 15, 2023, 7:00 PM" />

            <!-- Event Location -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvEventLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="#666666"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvEventDate"
                tools:text="Downtown Jazz Club" />

            <!-- Event Price -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvEventPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="#666666"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvEventLocation"
                tools:text="$25.00" />

            <!-- Event Capacity -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvEventCapacity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="#666666"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvEventPrice"
                tools:text="Capacity: 100 participants" />

            <!-- Waiting List Info Layout (visible when data loads) -->
            <LinearLayout
                android:id="@+id/layoutWaitingListInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvEventCapacity">

                <!-- Waiting List Count -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvWaitingListCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceBody1"
                    android:textColor="#000000"
                    tools:text="Total Entrants: 45" />

                <!-- Registration Window -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvRegistrationWindow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textColor="#17C172"
                    tools:text="Registration closes: Dec 10, 2023, 11:59 PM" />

            </LinearLayout>

            <!-- Lottery Info -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvLotteryInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textColor="#333333"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layoutWaitingListInfo"
                tools:text="Lottery Selection Process:\n\n• participants will be randomly selected\n• Selected participants will receive a notification\n• You must accept the invitation within the given timeframe\n• If someone declines, another participant will be drawn\n• Everyone on the waiting list has an equal chance of being selected" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <!-- Progress Bar (overlay while loading) -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Button Container (bottom of screen) -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Join/Leave Waiting List Button (primary state-based button) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnJoinLeaveWaitingList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Join Waiting List"
            android:textColor="#FFFFFF"
            app:backgroundTint="#1976D2"
            app:cornerRadius="8dp"
            app:elevation="4dp" />

        <!-- Horizontal Container for Accept/Decline Buttons -->
        <LinearLayout
            android:id="@+id/layoutInvitationActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Accept Spot Button (teal with icon) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAcceptSpot"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="ACCEPT SPOT"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:visibility="gone"
                app:backgroundTint="#17C172"
                app:cornerRadius="28dp"
                app:elevation="4dp"
                app:icon="@android:drawable/ic_menu_send"
                app:iconGravity="end"
                app:iconTint="#FFFFFF"
                tools:visibility="visible" />

            <!-- Decline Button (white with purple border) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDecline"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_marginStart="8dp"
                android:text="DECLINE"
                android:textColor="#9C27B0"
                android:textStyle="bold"
                android:visibility="gone"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                app:backgroundTint="#FFFFFF"
                app:cornerRadius="28dp"
                app:elevation="4dp"
                app:strokeColor="#9C27B0"
                app:strokeWidth="2dp"
                tools:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
